{
	"name": "wmui-style-guide",
	"version": "0.1.0",
	"description": "Wikimedia Design Style Guide, focus on Wikimedia User-Interface",
	"keywords": [
		"ui"
	],
	"homepage": "https://design.wikimedia.org/style-guide/",
	"repository": {
		"type": "git",
		"url": "https://github.com/wikimedia/WikimediaUI-Style-Guide.git"
	},
	"private": true,
	"license": "MIT",
	"dependencies": {
		"fontfaceobserver": "2.1.0",
		"normalize.css": "8.0.1",
		"wikimedia-ui-base": "0.19.0"
	},
	"devDependencies": {
		"@lodder/grunt-postcss": "3.0.1",
		"autoprefixer": "10.2.6",
		"browserslist-config-wikimedia": "0.2.0",
		"cssnano": "5.0.6",
		"eslint-config-wikimedia": "0.20.0",
		"grunt": "1.4.1",
		"grunt-contrib-concat": "1.0.1",
		"grunt-contrib-uglify": "5.0.1",
		"grunt-contrib-watch": "1.1.0",
		"grunt-eslint": "23.0.0",
		"grunt-exec": "3.0.0",
		"grunt-replace": "2.0.2",
		"grunt-stylelint": "0.16.0",
		"grunt-svgmin": "6.0.1",
		"imagemin": "8.0.0",
		"imagemin-zopfli": "7.0.0",
		"imagemin-cli": "6.0.0",
		"pixrem": "5.0.0",
		"postcss": "8.3.5",
		"postcss-cssnext": "3.1.0",
		"postcss-custom-properties": "11.0.0",
		"postcss-import": "14.0.2",
		"stylelint-config-wikimedia": "0.11.1"
	},
	"scripts": {
		"start": "grunt watch",
		"build:imagemin": "imagemin img/components/*.png --plugin=zopfli --out-dir=img/components/ && imagemin img/design-principles/*.png --plugin=zopfli --out-dir=img/design-principles/ && imagemin img/visual-style/*.png --plugin=zopfli --out-dir=img/visual-style/ && imagemin resources/!\\(WikimediaUI-components_overview\\).png --plugin=zopfli --out-dir=resources/",
		"build": "grunt && npx npm-run-all build:*",
		"test": "grunt lint"
	}
}
